script/source = "extends CharacterBody2D

const SPEED = 300.0
const JUMP_VELOCITY = -600.0
const MAX_SKEW = 0.1

var sprite_material = preload(\"res://assets/PlayerTiltMovementMaterial.tres\")
# Get the gravity from the project settings to be synced with RigidBody nodes.
var gravity = ProjectSettings.get_setting(\"physics/2d/default_gravity\")

func _ready():
	print(sprite_material)

func _physics_process(delta):
	# Add the gravity.
	if not is_on_floor():
		velocity.y += gravity * delta

	# Handle Jump.
	if Input.is_action_just_pressed(\"ui_accept\") and is_on_floor():
		velocity.y = JUMP_VELOCITY

	# Get the input direction and handle the movement/deceleration.
	var direction = Input.get_axis(\"ui_left\", \"ui_right\")
	if direction:
		velocity.x = direction * SPEED
		flip_sprite(direction)
		update_skew(-direction)  # Pass the inverted direction for skew
	else:
		velocity.x = move_toward(velocity.x, 0, SPEED)
		update_skew(0)

	move_and_slide()

func update_skew(direction):
	var mat = $Sprite.material as ShaderMaterial
	var skew_dir = direction
	# If sprite is flipped, reverse the skew direction.
	if $Sprite.scale.x < 0:
		skew_dir *= -1 

	if skew_dir < 0:
		mat.set(\"shader_param/skew_amount\", -MAX_SKEW)
	elif skew_dir > 0:
		mat.set(\"shader_param/skew_amount\", MAX_SKEW)
	else:
		mat.set(\"shader_param/skew_amount\", 0.0)

func flip_sprite(direction):
	if direction < 0:
		$Sprite.scale.x = -abs($Sprite.scale.x)
	elif direction > 0:
		$Sprite.scale.x = abs($Sprite.scale.x)
"

